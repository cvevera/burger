<div class="container">
  <div class="row">
    <div class="col-12 text-center">
      <h1>Eat the Burger!</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-12 text-center">
     
    </div>
  </div>
  <div class="row">
    <div class="col-6 text-center available">
       <h3>Available Burgers!</h3>
      <ul>
        {{#each burgers}}
        {{#unless sleepy}}
        {{> cats/cat-block sleep=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-6 text-center devoured">
      <h3>Devoured Burgers</h3>

      <ul>
        {{#each burgers}}
        {{#if sleepy}}
        {{> cats/cat-block sleep=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-12 addform">
      <h3>Add a Burger</h3>
      <form class="create-form">

        <div class="form-group">
          <label for="ca">Burger name</label>
          <input type="text" id="ca" name="name">
        </div>

        <div class="form-group">
          <label for="sleepy">With Ketchup?</label><br>
          <input type="radio" name="sleepy" value="0" checked> No Way!<br>
          <input type="radio" name="sleepy" value="0"> Absolutely!
        </div>

        <button type="submit">Add Burger</button>
      </form>
    </div>
  </div>
</div>