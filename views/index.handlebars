<div class="container">
  <div class="row">
    <div class="col-12 text-center">
      <h1>Eat the Burger!</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-12 text-center">
     <img src="https://images.unsplash.com/photo-1571091718767-18b5b1457add?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1652&q=80" alt="">
    </div>
  </div>
  <div class="row">
    <div class="col-6 text-center available">
       <h3>Available Burgers!</h3>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devour=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-6 text-center devoured">
      <h3>Devoured Burgers!</h3>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devour=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-12 text-center addform">
      <h3>Add a Burger</h3>
      <form class="create-form">

        <div class="form-group">
          <label for="ca">Burger Name</label>
          <input type="text" id="ca" name="name">
        </div>

        <div class="form-group">
          <label for="sleepy">With Ketchup?</label><br>
          <input type="radio" name="ketchup" value="0" checked> No Way!<br>
          <input type="radio" name="ketchup" value="0"> Absolutely!
        </div>

        <button type="submit">Add Burger</button>
      </form>
    </div>
  </div>
</div>